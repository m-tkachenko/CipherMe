<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/users_in_rows">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_photo_message"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorMatrixGreen" />

    <TextView
        android:id="@+id/latest_messages_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_font"
        android:layout_toRightOf="@id/circle_photo_message"
        android:layout_toEndOf="@id/circle_photo_message"
        android:layout_centerVertical="true"
        android:text="Username"
        android:textSize="28sp"
        android:textColor="@color/colorMatrixGreen"/>

</RelativeLayout>