<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/users_in_rows">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_username_photo_row"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorMatrixGreen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/username_textview_newmessage_row"
        android:layout_toRightOf="@id/circle_username_photo_row"
        android:layout_centerVertical="true"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMatrixGreen"
        android:fontFamily="@font/ubuntu_font"
        android:text="@string/username_default_string"
        android:layout_toEndOf="@id/circle_username_photo_row" />
</RelativeLayout>